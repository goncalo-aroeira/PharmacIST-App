<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Light theme -->
    <style name="Theme.PharmacIST" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryVariant">@color/primary_variant</item>
        <item name="colorOnPrimary">@color/on_primary</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary_color</item>
        <item name="colorSecondaryVariant">@color/secondary_variant</item>
        <item name="colorOnSecondary">@color/on_secondary</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <!--Add margin to accomodate status bar color-->
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowContentTransitions">true</item>

        <item name="textAppearanceHeadline1">@style/TextAppearance.PharmacIST.Headline1</item>
        <item name="textAppearanceHeadline2">@style/TextAppearance.PharmacIST.Headline2</item>
        <item name="textAppearanceHeadline3">@style/TextAppearance.PharmacIST.Headline3</item>
        <item name="textAppearanceSubtitle1">@style/TextAppearance.PharmacIST.Subtitle1</item>
        <item name="textAppearanceSubtitle2">@style/TextAppearance.PharmacIST.Subtitle2</item>
        <item name="textAppearanceBody1">@style/TextAppearance.PharmacIST.Body1</item>
        <item name="textAppearanceBody2">@style/TextAppearance.PharmacIST.Body2</item>
        <item name="textAppearanceButton">@style/TextAppearance.PharmacIST.Button</item>
        <item name="textAppearanceCaption">@style/TextAppearance.PharmacIST.Caption</item>
        <item name="textAppearanceOverline">@style/TextAppearance.PharmacIST.Overline</item>
    </style>


    <!-- Text Styles -->
    <style name="TextAppearance.PharmacIST.Headline1" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="android:textColor">@color/primary_color</item>
    </style>
    <style name="TextAppearance.PharmacIST.Headline2" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:textColor">@color/primary_color</item>
    </style>
    <style name="TextAppearance.PharmacIST.Headline3" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textColor">@color/primary_color</item>
    </style>
    <style name="TextAppearance.PharmacIST.Subtitle1" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textColor">@color/secondary_color</item>
    </style>
    <style name="TextAppearance.PharmacIST.Subtitle2" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="android:textColor">@color/secondary_color</item>
    </style>
    <style name="TextAppearance.PharmacIST.Body1" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">@color/on_secondary</item>
    </style>
    <style name="TextAppearance.PharmacIST.Body2" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textColor">@color/on_secondary</item>
    </style>
    <style name="TextAppearance.PharmacIST.Button" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textColor">@color/on_secondary</item>
    </style>
    <style name="TextAppearance.PharmacIST.ButtonOutline" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:background">@color/on_primary</item>
        <item name="android:textColor">@color/primary_color</item>
        <!-- Add more customizations if required -->
    </style>
    <style name="TextAppearance.PharmacIST.Caption" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textColor">@color/on_primary</item>
    </style>
    <style name="TextAppearance.PharmacIST.Overline" parent="TextAppearance.MaterialComponents.Overline">
        <item name="android:textColor">@color/on_secondary</item>
    </style>

</resources>
