<resources>
    <!-- Dark theme -->
    <style name="Theme.PharmacIST.Dark" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_color_dark</item>
        <item name="colorPrimaryVariant">@color/primary_variant_dark</item>
        <item name="colorOnPrimary">@color/on_primary_dark</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary_color_dark</item>
        <item name="colorSecondaryVariant">@color/secondary_variant_dark</item>
        <item name="colorOnSecondary">@color/on_secondary_dark</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <!-- Add margin to accommodate status bar color -->
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowContentTransitions">true</item>

        <item name="textAppearanceHeadline1">@style/TextAppearance.PharmacIST.Dark.Headline1</item>
        <item name="textAppearanceHeadline2">@style/TextAppearance.PharmacIST.Dark.Headline2</item>
        <item name="textAppearanceHeadline3">@style/TextAppearance.PharmacIST.Dark.Headline3</item>
        <item name="textAppearanceSubtitle1">@style/TextAppearance.PharmacIST.Dark.Subtitle1</item>
        <item name="textAppearanceSubtitle2">@style/TextAppearance.PharmacIST.Dark.Subtitle2</item>
        <item name="textAppearanceBody1">@style/TextAppearance.PharmacIST.Dark.Body1</item>
        <item name="textAppearanceBody2">@style/TextAppearance.PharmacIST.Dark.Body2</item>
        <item name="textAppearanceButton">@style/TextAppearance.PharmacIST.Dark.Button</item>
        <item name="textAppearanceCaption">@style/TextAppearance.PharmacIST.Dark.Caption</item>
        <item name="textAppearanceOverline">@style/TextAppearance.PharmacIST.Dark.Overline</item>
    </style>


    <!-- Text Styles -->
    <style name="TextAppearance.PharmacIST.Dark.Headline1" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="android:textColor">@color/primary_color_dark</item>
    </style>

    <style name="TextAppearance.PharmacIST.Dark.Headline2" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:textColor">@color/primary_color_dark</item>
    </style>

    <style name="TextAppearance.PharmacIST.Dark.Headline3" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textColor">@color/primary_color_dark</item>
    </style>
    <style name="TextAppearance.PharmacIST.Dark.Subtitle1" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textColor">@color/secondary_color_dark</item>
    </style>
    <style name="TextAppearance.PharmacIST.Dark.Subtitle2" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="android:textColor">@color/secondary_color_dark</item>
    </style>
    <style name="TextAppearance.PharmacIST.Dark.Body1" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">@color/on_secondary_dark</item>
    </style>
    <style name="TextAppearance.PharmacIST.Dark.Body2" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textColor">@color/on_secondary_dark</item>
    </style>
    <style name="TextAppearance.PharmacIST.Dark.Button" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textColor">@color/on_secondary_dark</item>
    </style>

    <style name="TextAppearance.PharmacIST.Dark.ButtonOutline" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:background">@color/on_primary_dark</item>
        <item name="android:textColor">@color/primary_color_dark</item>
        <!-- Add more customizations if required -->
    </style>
    <style name="TextAppearance.PharmacIST.Dark.Caption" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textColor">@color/on_primary_dark</item>
    </style>
    <style name="TextAppearance.PharmacIST.Dark.Overline" parent="TextAppearance.MaterialComponents.Overline">
        <item name="android:textColor">@color/on_secondary_dark</item>
    </style>
</resources>
